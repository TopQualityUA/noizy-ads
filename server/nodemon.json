{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    ".idea",
    ".editorconfig",
    ".gitignore",
    "README.md"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "*.*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
