{
  "name": "noizy-ads",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Blocks annoying and noisy ads",
  "permissions": [
    "tabs","<all_urls>","http://*/*", "https://*/*","storage",
    "cookies","https://ajax.googleapis.com/*","alarms","contextMenus"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_title": "Noizy ads blocker",
    "default_popup": "views/popup.html"
  },
  "background": {
    "scripts": [
      "scripts/app_config.js",
      "node_modules/socket.io/node_modules/socket.io-client/socket.io.js",
      "bower_components/jquery/dist/jquery.js",
      "scripts/background/chromereload.js",
      "scripts/background/store.js",
      "scripts/background/url_parser.js",
      "scripts/background/worker.js",
      "scripts/background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["scripts/app_config.js", "bower_components/jquery/dist/jquery.js", "scripts/content/content_pre_load.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": false,
      "js": ["scripts/content/content_after_load.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "offline_enabled": false
}
